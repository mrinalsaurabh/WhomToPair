@model Pair.Web.ViewModels.DeleteViewModel

@using (Html.BeginForm())
{

<ul style="">
    @foreach (var item in Model.AllIndividuals)
    {
    <li>
        <div style="float:left;"><input name="SelectedIndividual" class="form-control" value="@item.Name" type="radio" /></div>
        <div style="float:left;">@item.Name</div>
    </li>
    }
</ul>
    <input type="submit" value="Confirm" />
}